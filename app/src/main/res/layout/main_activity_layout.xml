<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/coucou"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <EditText
        android:id="@+id/queryInputET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/query_placeholder"
        android:inputType="text"
        android:autofillHints="" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/queryInputTypeSp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:entries="@array/query_value"
            />

        <Button
            android:id="@+id/querySearchBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/search"
            />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_to_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="8dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/datas_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/item_layout"
                tools:itemCount="5"/>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </FrameLayout>

</LinearLayout>
